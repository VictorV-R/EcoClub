<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.example.ecoclub.View.Rectangulo
        android:id="@+id/rectanguloC"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.105" />

    <TextView
        android:id="@+id/idDataComunity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Comunidad n"
        app:layout_constraintBottom_toBottomOf="@+id/rectanguloC"
        app:layout_constraintEnd_toEndOf="@+id/rectanguloC"
        app:layout_constraintHorizontal_bias="0.119"
        app:layout_constraintStart_toStartOf="@+id/rectanguloC"
        app:layout_constraintTop_toTopOf="@+id/rectanguloC"
        app:layout_constraintVertical_bias="0.47" />

    <ImageButton
        android:id="@+id/imgBtnAddComunity"
        android:layout_width="48dp"
        android:layout_height="52dp"
        android:background="@color/color_content"
        app:layout_constraintBottom_toBottomOf="@+id/rectanguloC"
        app:layout_constraintEnd_toEndOf="@+id/rectanguloC"
        app:layout_constraintHorizontal_bias="0.882"
        app:layout_constraintStart_toEndOf="@+id/idDataComunity"
        app:layout_constraintTop_toTopOf="@+id/rectanguloC"
        app:layout_constraintVertical_bias="0.238"
        app:srcCompat="@android:drawable/ic_menu_add"
        app:tint="#000000" />

    <Space
        android:id="@+id/space"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rectanguloC" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imgBtnComunityDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"

        android:padding="7dp"
        android:scaleType="centerCrop"

        app:layout_constraintBottom_toBottomOf="@+id/rectanguloC"
        app:layout_constraintEnd_toStartOf="@+id/idDataComunity"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/rectanguloC"
        app:layout_constraintVertical_bias="0.272"
        app:srcCompat="@drawable/idnp_person_8_small"

        app:shapeAppearanceOverlay="@style/ImageViewRedonda"/>

    <com.example.ecoclub.View.ViewTransparente
        android:id="@+id/imgComunity"
        android:layout_width="50dp"
        android:layout_height="45dp"
        app:layout_constraintBottom_toBottomOf="@+id/imgBtnComunityDescription"
        app:layout_constraintEnd_toEndOf="@+id/imgBtnComunityDescription"
        app:layout_constraintHorizontal_bias="0.727"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imgBtnComunityDescription"
        app:layout_constraintVertical_bias="0.583" />

</androidx.constraintlayout.widget.ConstraintLayout>