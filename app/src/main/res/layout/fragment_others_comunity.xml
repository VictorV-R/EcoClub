<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ComunityOthersFragment"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/rectangulo"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="28dp"
        android:layout_marginRight="30dp"
        app:cardCornerRadius="25dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editTextComunitySearch"
                android:layout_width="254dp"
                android:layout_height="48dp"
                android:layout_marginStart="20dp"
                android:ems="10"
                android:fontFamily="@font/bhavuka_regular"
                android:hint="@string/buscar"
                android:inputType="textPersonName"
                android:textSize="20dp" />

            <ImageButton
                android:id="@+id/imgBtnSearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/color_content"
                android:src="?android:attr/actionModeWebSearchDrawable" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="20dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/bhavuka_regular"
        android:text="@string/resultados"
        android:textSize="20dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/idRecyclerComunity"
        android:layout_width="match_parent"
        android:layout_height="290dp"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="292dp"/>

</LinearLayout>