<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.MyComunityFragment">

    <TextView
        android:id="@+id/textViewMyComunitySearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="24dp"
        android:text="@string/misComunidades"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/rectanguloMyComunity"
        app:layout_constraintEnd_toStartOf="@+id/btnAtrasMyComunity"
        app:layout_constraintHorizontal_bias="0.161"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.941" />

    <TextView
        android:id="@+id/textViewMyComunity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:text="@string/resultados"
        app:layout_constraintBottom_toTopOf="@+id/idRecyclerMyComunity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.07"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rectanguloMyComunity" />


    <androidx.cardview.widget.CardView
        android:id="@+id/rectanguloMyComunity"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="84dp"
        android:layout_marginRight="30dp"
        app:cardCornerRadius="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editTextMyComunity"
                android:layout_width="254dp"
                android:layout_height="46dp"
                android:ems="10"
                android:hint="@string/buscar"
                android:inputType="textPersonName"
                android:layout_marginLeft="20dp"/>

            <ImageButton
                android:id="@+id/imgBtnSearchMyComunity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/color_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:src="?android:attr/actionModeWebSearchDrawable" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/idRecyclerMyComunity"
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="80dp"
        android:layout_marginRight="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rectanguloMyComunity"
        app:layout_constraintVertical_bias="0.011" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnAtrasMyComunity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="28dp"
        android:background="@drawable/custom_boton_atras"
        android:text="Atras"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/rectanguloMyComunity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.47" />


</androidx.constraintlayout.widget.ConstraintLayout>