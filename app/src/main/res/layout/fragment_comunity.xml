<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_design_comunity"
    tools:context=".fragments.ComunityFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="@string/txt_comunidades"
        android:fontFamily="@font/bhavuka_regular"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="28dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="32dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/radio_button_left_unchecked"
        android:button="@color/transparent"
        android:gravity="center"
        android:orientation="horizontal"
        android:textColor="@color/gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView11">

        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/btnOtrasComunidades"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:background="@drawable/radio_button_left_selector"
            android:button="@color/transparent"
            android:checked="true"
            android:fontFamily="@font/bhavuka_regular"
            android:gravity="center"
            android:text="@string/txt_comunidades"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/btnMisComunidades"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/radio_button_left_selector"
            android:button="@color/transparent"
            android:fontFamily="@font/bhavuka_regular"
            android:gravity="center"
            android:text="@string/misComunidades"
            android:textAllCaps="false"
            android:textColor="#757575"
            android:textSize="20sp"
            android:textStyle="bold" />

    </RadioGroup>

    <FrameLayout
        android:id="@+id/frame_layout_comunity"
        android:layout_width="402dp"
        android:layout_height="426dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup"
        app:layout_constraintVertical_bias="0.24">

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>