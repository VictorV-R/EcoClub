<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
<item android:height="100dp"
    android:gravity="top"
    android:top="50dp">
    <shape android:shape="oval">
        <gradient android:startColor="#B8684F"
            android:endColor="#610323"
            android:type="linear" android:angle="270"
            />
    </shape>
</item>
<item android:height="100dp"
    android:gravity="top">
    <shape android:shape="rectangle">
        <gradient android:startColor="@color/color_secundary"
            android:endColor="#952A48"
            android:type="linear" android:angle="270"
            />
    </shape>
</item>
</layer-list>