<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:height="160dp"
        android:gravity="top">
        <shape android:shape="oval">
            <gradient android:startColor="#AC6049"
                android:endColor="#610323"
                android:type="linear" android:angle="270"
                />
        </shape>
    </item>
    <item android:height="80dp"
        android:gravity="top">
        <shape android:shape="rectangle">
            <gradient android:startColor="#B66F3D"
                android:endColor="#8C2B45"
                android:type="linear" android:angle="270"
                />
        </shape>
    </item>
</layer-list>