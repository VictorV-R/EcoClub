<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:height="100dp"
        android:gravity="top"
        android:top="50dp">
        <shape android:shape="oval">
            <gradient android:startColor="@color/color_primary"
                android:endColor="@color/color_quinary"
                android:type="linear" android:angle="270"
                />
        </shape>
    </item>
    <item android:height="100dp"
        android:gravity="top">
        <shape android:shape="rectangle">
            <gradient android:startColor="@color/color_primary"
                android:endColor="#7492D3"
                android:type="linear" android:angle="270"
                />
        </shape>
    </item>
</layer-list>